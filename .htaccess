# CreditSoft Configuration

# Protect config file
<Files "credit_config.php">
    Order allow,deny
    Deny from all
</Files>

# Rewrite rules
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Landing page is index.php (the main site)
    # CodeIgniter routes go through app.php
    
    # Allow direct access to static files and installer
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^installer - [L]
    
    # Dashboard and admin routes go to CodeIgniter
    RewriteRule ^(dashboard|admin|api|crm|clients|reports|disputes|settings|auth) app.php [L]
    
    # All other requests go to landing page
    RewriteRule ^ index.php [L]
</IfModule>
